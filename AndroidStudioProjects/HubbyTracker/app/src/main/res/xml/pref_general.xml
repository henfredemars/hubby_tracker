<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="henfred.hopto.org"
        android:key="server_name"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Send location updates here."
        android:title="Server" />
    <EditTextPreference
        android:defaultValue="5155"
        android:key="server_port"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Server port."
        android:title="Port" />
    <EditTextPreference
        android:defaultValue="28.3608493"
        android:key="lat"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Target Latitude" />
    <EditTextPreference
        android:defaultValue="-80.6669143"
        android:key="lon"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Target Longitude" />
    <EditTextPreference
        android:defaultValue="10000"
        android:key="response"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Location Responsiveness" />

</PreferenceScreen>
